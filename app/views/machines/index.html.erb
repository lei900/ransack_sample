<p id="notice"><%= notice %></p>

<h1>Machines</h1>

<%= render 'search_form' %>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, "Name", default_order: :desc) %></th>
      <th><%= sort_link(@q, :ip, "IP Address") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><%= machine.name %></td>
        <td><%= machine.ip %></td>
        <td><%= link_to 'Show', machine %></td>
        <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
        <td><%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Machine', new_machine_path %>
